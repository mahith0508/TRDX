# Example Environment Configuration File
# Copy this file to .env and configure your API keys and settings

# =============================================================================
# DATA SOURCES
# =============================================================================

# Alpaca Markets (Paper Trading and Live Trading)
# Sign up at: https://alpaca.markets
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Interactive Brokers (Professional Trading Platform)
# Requires TWS or IB Gateway running
IB_HOST=127.0.0.1
IB_PORT=7497
IB_CLIENT_ID=1

# Binance (Cryptocurrency Trading)
# Sign up at: https://binance.com
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable Performance Tracking
ENABLE_PERFORMANCE_TRACKING=true

# =============================================================================
# NOTIFICATIONS (Optional)
# =============================================================================

# Email Notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Slack Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Discord Notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# =============================================================================
# DATABASE (Optional - for advanced users)
# =============================================================================

# PostgreSQL Database (for production use)
DATABASE_URL=postgresql://username:password@localhost:5432/trading_db

# Redis Cache (for high-frequency trading)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SECURITY
# =============================================================================

# Encryption key for sensitive data (generate with: python -c "import secrets; print(secrets.token_hex(32))")
ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here

# API Rate Limiting
MAX_REQUESTS_PER_MINUTE=100

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Mode (enables additional debugging)
DEVELOPMENT_MODE=false

# Test Data Path (for backtesting with custom data)
TEST_DATA_PATH=/path/to/your/test/data

# Bypass API Calls (for testing without real API calls)
BYPASS_API_CALLS=false